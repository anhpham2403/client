<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.anh.movie.data.model.Movie"
            />
        <variable
            name="listenner"
            type="com.anh.movie.screen.home.listmovie.MovieAdapter.OnItemClickListener"
            />
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:onClick="@{()->listenner.onItemClick(viewModel)}"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:imageUrl="@{viewModel.posterUrl}"
                />
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@{viewModel.title}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/text_date_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@{viewModel.date}"
                android:textSize="@dimen/sp_12"
                android:gravity="center_horizontal"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>