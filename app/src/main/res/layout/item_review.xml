<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.anh.movie.data.model.Review"
            />
        <variable
            name="listenner"
            type="com.anh.movie.screen.moviedetail.review.ReviewAdapter.OnItemClickListener"
            />
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:onClick="@{()->listenner.onItemClick(viewModel)}"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >
            <com.anh.movie.widget.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="centerCrop"
                app:imageUrl1="@{viewModel.user.avatarUrl}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="@dimen/dp_2"
                        android:text="@{viewModel.user.username}"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="@dimen/dp_2"
                        android:text="@{viewModel.date}"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/sp_12"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_date_release"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingBottom="2dp"
                    android:paddingTop="@dimen/dp_2"
                    android:text="@{viewModel.content}"
                    android:textSize="@dimen/sp_12"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>